<!-- Put site-specific property overrides in this file. -->
<configuration>
  <property>
  <!-- Determines where on the local filesystem an DFS data node should store its blocks. 
      If this is a comma-delimited list of directories, then data will be stored in all named directories.
      For performance, if the nodes have multiple disks, it is convenient to specify a directory on each of the local disks -->
    <name>dfs.namenode.backup.address</name>
    <value>hpcnube-backupnode:50100</value>
    <final>true</final>
  </property>
   <property>
    <name>dfs.namenode.backup.http-address</name>
    <value>hpcnube-backupnode:50105</value>
  </property>
</configuration>

